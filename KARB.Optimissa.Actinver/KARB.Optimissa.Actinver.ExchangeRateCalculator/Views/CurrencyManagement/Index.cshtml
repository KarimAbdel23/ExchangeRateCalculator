@using KARB.Optimissa.Actinver.ExchangeRateCalculator.ViewModels
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860    
*@
@model CurrencyManagementViewModel
@{
    ViewData["Title"] = "Gestión de Divisas";
}
<div class="container mt-4">
    <h4>Gestión de Divisas</h4>
    <form asp-action="SaveSettings" method="post">
        <div class="mb-4">
            <label for="mainCurrency" class="form-label">Moneda principal</label>
            <select asp-for="MainCurrency" asp-items="ViewBag.MainCurrencyList" class="form-select" id="mainCurrency" name="mainCurrency" required></select>
    
        </div>

        <div class="mb-4">
            <label class="form-label">Monedas favoritas</label>
            <div class="row">
                @foreach (var currency in Model.CurrencyCatalog)
                {
                    <div class="col-md-4 mb-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="FavoriteCurrencies" value="@currency.CurrencySymbol"
                                @(Model.FavoriteCurrencies.Contains(currency.CurrencySymbol) ? "checked" : "") />
                            <label class="form-check-label">@currency.FullName (@currency.CurrencySymbol)</label>
                        </div>

                    </div>
                }
            </div>

        </div>

        <button type="submit" class="btn btn-success">Guardar configuración</button>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </form>

</div>