@using KARB.Optimissa.Actinver.ExchangeRateCalculator.ViewModels
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model DashboardViewModel
@{
    ViewData["Title"] = "Panel Principal";
}

<div class="container mt-4">
    <h4>Panel Principal</h4>
    <p>Moneda principal: <strong>@Model.MainCurrency</strong> </p>
    <p>Fecha de actualización: <strong>@Model.DateLatest.ToString("dd/MM/yyyy")</strong></p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Moneda</th>
                <th>Tasa de cambio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Conversions)
            {
                <tr>
                    <td>@item.TargetCurrency</td>
                    <td>1 @Model.MainCurrency = @item.ExchangeRate.ToString("F4") @item.TargetCurrency</td>
                </tr>
            }          
        </tbody>
    </table>

    @if (Model.Conversions.Count() <= 0)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Aún no tiene monedas favoritas registradas. Por favor, vaya al menú 'Gestión de Divisas' para crear su lista.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>